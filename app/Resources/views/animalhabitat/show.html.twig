{% extends 'animal/animal_layout.html.twig' %}
{% form_theme delete_form ':Form:fields.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block submenu %}
    {{ parent() }}
    <hr />
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('animalhabitat_new') }}">{% trans %}Add new{% endtrans %}</a></li>
        <li><a href="{{ path('animalhabitat_index') }}">{% trans %}List{% endtrans %}</a></li>
        <li><a href="{{ path('animalhabitat_edit', {'id':animalHabitat.id}) }}">{% trans %}Edit{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>Animal Habitat</h1>

<div class="col-lg-4">
    <div class="table-responsive">
        <table class="table table-bordered table-hover record_properties">
            <tbody>
                <tr>
                    <th>{% trans %}Id{% endtrans %}</th>
                    <td>{{ animalHabitat.id }}</td>
                </tr>
                <tr>
                    <th>{% trans %}Name{% endtrans %}</th>
                    <td>{{ animalHabitat.name }}</td>
                </tr>
                <tr>
                    <th>{% trans %}Description{% endtrans %}</th>
                    <td>{{ animalHabitat.description }}</td>
                </tr>
               
                <tr>
                    <th>{% trans %}AnimalBreed{% endtrans %}</th>
                    <td>
                        <a href="{% if animalHabitat.animalBreed.id is defined %} {{ path('animalbreed_show', { 'id': animalHabitat.animalBreed.id }) }} {% endif %}">{{ animalHabitat.animalBreed }}</a>
                    </td>
                </tr>
                <tr>
                    <th>{% trans %}Datcre{% endtrans %}</th>
                    <td>{% if animalHabitat.datCre %}{{ animalHabitat.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>{% trans %}Datupd{% endtrans %}</th>
                    <td>{% if animalHabitat.datUpd %}{{ animalHabitat.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>
    </div>
                
    {{ form_start(delete_form) }}

            {{ form_widget(delete_form.submit) }}

    {{ form_end(delete_form) }}
</div>

   
{% endblock %}

