{% extends 'animal/animal_layout.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block submenu %}
    {{ parent() }}
    <hr />
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('animalregion_new') }}">{% trans %}Add new{% endtrans %}</a></li>
        <li><a href="{{ path('animalregion_index') }}">{% trans %}List{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>AnimalRegion list</h1>

<div class="table-responsive">
    <table class="table table-hover records_list">
        <thead>
            <tr>
                {% for column in columns %}
                    <th>{{ column|trans }}</th>
                    {% endfor %}
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
        </thead>
        <tbody>
        {% for animalRegion in animalRegions %}
            <tr>
                <td><a href="{{ path('animalregion_show', { 'id': animalRegion.id }) }}">{{ animalRegion.id }}</a></td>
                <td>{{ animalRegion.name }}</td>
                <td>{{ animalRegion.description }}</td>
                <td>{% if animalRegion.datCre %}{{ animalRegion.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if animalRegion.datUpd %}{{ animalRegion.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a class="btn btn-sm btn-info" href="{{ path('animalregion_show', { 'id': animalRegion.id }) }}"> <span class="glyphicon glyphicon-share"></span> Show
                    </a>
                     <a class="btn btn-sm btn-default" href="{{ path('animalregion_edit', { 'id': animalRegion.id }) }}">  <span class="glyphicon glyphicon-edit"></span> Edit
                    </a>
                </td>
            </tr>
        {% endfor %}
       </tbody>
    </table>
</div>

    
{% endblock %}
