{% extends 'animal/animal_layout.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block submenu %}
    {{ parent() }}
    <hr />
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('animalregion_new') }}">{% trans %}Add new{% endtrans %}</a></li>
        <li><a href="{{ path('animalregion_index') }}">{% trans %}List{% endtrans %}</a></li>
        <li><a href="{{ path('animalregion_edit', { 'id':animalRegion.id }) }}">{% trans %}Edit{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>Animal Region</h1>

    <div class="col-lg-4">
        <div class="table-responsive">
            <table class="table table-bordered table-hover record_properties">
                <tbody>
                    <tr>
                        <th>{% trans %}Id{% endtrans %}</th>
                        <td>{{ animalRegion.id }}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}Name{% endtrans %}</th>
                        <td>{{ animalRegion.name }}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}Description{% endtrans %}</th>
                        <td>{{ animalRegion.description }}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}Datcre{% endtrans %}</th>
                        <td>{% if animalRegion.datCre %}{{ animalRegion.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}Datupd{% endtrans %}</th>
                        <td>{% if animalRegion.datUpd %}{{ animalRegion.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        {{ form_start(delete_form, {'attr': {'role':'form', 'class':'form-horizontal'}}) }}
        {{ form_start(delete_form) }}
        {{ form_end(delete_form) }}
    </div>

{% endblock %}
