{% extends 'animal/animal_layout.html.twig' %}
{% form_theme delete_form ':Form:fields.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block submenu %}
    {{ parent() }}
    <hr />
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('animalbreed_new') }}">{% trans %}Add new{% endtrans %}</a></li>
        <li><a href="{{ path('animalbreed_index') }}">{% trans %}List{% endtrans %}</a></li>
        <li><a href="{{ path('animalbreed_edit', {'id':animalBreed.id}) }}">{% trans %}Edit{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>Animal Breed</h1>

    <div class="col-lg-4">
        <div class="table-responsive">
            <table class="table table-bordered table-hover record_properties">
                <tbody>
                    <tr>
                        <th>{% trans %}Id{% endtrans %}</th>
                        <td>{{ animalBreed.id }}</td>
                    </tr>
                    <tr> 
                        <th>{% trans %}Name{% endtrans %}</th>
                        <td>{{ animalBreed.name }}</td>
                    </tr>
                    <tr> 
                        <th>{% trans %}Description{% endtrans %}</th>    
                        <td>{{ animalBreed.description }}</td>
                    </tr>
                    <tr> <th>{% trans %}Details{% endtrans %}</th>
                        <td>{{ animalBreed.details }}</td>
                    </tr>
                    <tr> <th>{% trans %}Date of Birth{% endtrans %}</th>
                        <td>{{ animalBreed.dateOfBirth }}</td
                    </tr>
                    <tr> <th>{% trans %}Daily Requirements{% endtrans %}</th>
                        <td>{{ animalBreed.dailyRequirements }}</td>
                    </tr>
                    <tr> <th>{% trans %}Unite Measure{% endtrans %}</th>
                        <td>
                            <a href="{% if animalBreed.unitMeasure.id is defined %} {{ path('unitmeasure_show', { 'id': unitMeasure.id }) }} {% endif %}">{{ animalBreed.unitMeasure }}</a>                          
                        </td>
                    </tr>
                    <tr> <th>{% trans %}Animal{% endtrans %}</th>
                        <td>
                            <a href="{% if animalBreed.animal.id is defined %} {{ path('animal_show', { 'id': animal.id }) }} {% endif %}">{{ animalBreed.animal }}</a>                          
                        </td>
                    </tr>
                    <tr> <th>{% trans %}Food Item{% endtrans %}</th>
                        <td>
                            <a href="{% if animalBreed.foodItems.id is defined %} {{ path('fooditem_show', { 'id': foodItems.id }) }} {% endif %}">{{ foodItems.animal }}</a>                          
                        </td>
                    </tr>
                    <tr> <th>{% trans %}Animal Categories{% endtrans %}</th>
                        <td>
                            <a href="{% if animalBreed.animalCategories.id is defined %} {{ path('animalcategory_show', { 'id': animalCategories.id }) }} {% endif %}">{{ animalBreed.animalCategories }}</a>                          
                        </td>
                    </tr>
                    <tr> <th>{% trans %}Photos{% endtrans %}</th>
                        <td>
                            <a href="{% if animalBreed.Photos.id is defined %} {{ path('photos_show', { 'id': photos.id }) }} {% endif %}">{{ animalBreed.photos }}</a>                          
                        </td>
                    </tr>
                    <tr> <th>{% trans %}Animal Habitat{% endtrans %}</th>
                        <td>
                            <a href="{% if animalBreed.animalHabitat.id is defined %} {{ path('animalhabitat_show', { 'id': animalHabitat.id }) }} {% endif %}">{{ animalBreed.animalHabitat}}</a>                          
                        </td>

                    </tr>
                    <tr>
                        <th>{% trans %}Datcre{% endtrans %}</th>
                        <td>{% if animalBreed.datCre %}{{ animalBreed.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>{% trans %}Datupd{% endtrans %}</th>
                        <td>{% if animalBreed.datUpd %}{{ animalBreed.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        {{ form_start(delete_form) }}

        {{ form_widget(delete_form.submit) }}

        {{ form_end(delete_form) }}
    </div>


{% endblock %}

