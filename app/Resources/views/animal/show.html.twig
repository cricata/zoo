{% extends 'animal/animal_layout.html.twig' %}
{% form_theme delete_form ':Form:fields.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block submenu %}
    {{ parent() }}
    <hr />
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('animal_new') }}">{% trans %}Add new{% endtrans %}</a></li>
        <li><a href="{{ path('animal_index') }}">{% trans %}List{% endtrans %}</a></li>
        <li><a href="{{ path('animal_edit', {'id':animal.id}) }}">{% trans %}Edit{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>Animal</h1>

<div class="col-lg-4">
    <div class="table-responsive">
        <table class="table table-bordered table-hover record_properties">
            <tbody>
                <tr>
                    <th>{% trans %}Id{% endtrans %}</th>
                    <td>{{ animal.id }}</td>
                </tr>
                <tr>
                    <th>{% trans %}Material{% endtrans %}</th>
                    <td>{{ animal.alias }}</td>
                </tr>
                <tr>
                    <th>{% trans %}Location{% endtrans %}</th>
                    <td>{{ animal.street }}</td>
                </tr>
                <tr>
                    <th>{% trans %}Number{% endtrans %}</th>
                    <td>{{ animal.no }}</td>
                </tr>
                <tr>
                    <th>{% trans %}Animal{% endtrans %}</th>
                    <td>
                        <a href="{% if animal.animal.id is defined %} {{ path('animal_show', { 'id': animal.animal.id }) }} {% endif %}">{{ animal.animal }}</a>
                    </td>
                </tr>
                <tr>
                    <th>{% trans %}Datcre{% endtrans %}</th>
                    <td>{% if animal.datCre %}{{ animal.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>{% trans %}Datupd{% endtrans %}</th>
                    <td>{% if animal.datUpd %}{{ animal.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            </tbody>
        </table>
    </div>
                
    {{ form_start(delete_form) }}

            {{ form_widget(delete_form.submit) }}

    {{ form_end(delete_form) }}
</div>

   
{% endblock %}

