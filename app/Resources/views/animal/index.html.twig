{% extends 'animal/animal_layout.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block submenu %}
   {{ parent() }}
    <hr />
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('animal_new') }}">{% trans %}Add new{% endtrans %}</a></li>
        <li><a href="{{ path('animal_index') }}">{% trans %}List{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>Animals list</h1>

<div class="table-responsive">
    <table class="table table-hover records_list">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}DateOfBirth{% endtrans %}</th>
                <th>{% trans %}Details{% endtrans %}</th>
                <th>{% trans %}DailyFoodAmount{% endtrans %}</th>
                <th>{% trans %}UnitMeasure{% endtrans %}</th>
                <th>{% trans %}Cages{% endtrans %}</th>
                <th>{% trans %}BreedCodes{% endtrans %}</th>
                <th>{% trans %}FoodItems{% endtrans %}</th>
                <th>{% trans %}Datcre{% endtrans %}</th>
                <th>{% trans %}Datupd{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>

            </tr>
        </thead>
        <tbody>
        {% for animal in animals %}
            <tr>
                <td><a href="{{ path('animal_show', { 'id': animal.id }) }}">{{ animal.id }}</a></td>
                <td>{{ animal.name }}</td>
                <td>{{ animal.dateOfBirth }}</td>
                <td>{{ animal.details }}</td>
                <td>{{ animal.dailyFoodAmount }}</td>
                <td>
                    <a href="{% if animal.unitMeasure.id is defined %} {{ path('unitmeasure_show', { 'id': unitMeasure.id }) }} {% endif %}">{{ animal.unitMeasure }}</a>                          
                </td>
                 <td>
                    <a href="{% if animal.cages.id is defined %} {{ path('cages_show', { 'id': cages.id }) }} {% endif %}">{{ animal.cages }}</a>                          
                </td>
                 <td>
                    <a href="{% if animal.breedCodes.id is defined %} {{ path('breedcodes_show', { 'id': breedCodes.id }) }} {% endif %}">{{ animal.breedCodes }}</a>                          
                </td>
                 <td>
                    <a href="{% if animal.foodItems.id is defined %} {{ path('fooditems_show', { 'id': foodItems.id }) }} {% endif %}">{{ animal.foodItems }}</a>                          
                </td>
                <td>{% if animal.datCre %}{{ animal.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if animal.datUpd %}{{ animal.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a class="btn btn-sm btn-info" href="{{ path('animal_show', { 'id': animal.id }) }}">
                        <span class="glyphicon glyphicon-share"></span> Show
                    </a>

                    <a class="btn btn-sm btn-default" href="{{ path('animal_edit', { 'id': animal.id }) }}">
                        <span class="glyphicon glyphicon-edit"></span>Edit
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
