{% extends 'animal/animal_layout.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block submenu %}
   {{ parent() }}
    <hr />
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('animalcategory_new') }}">{% trans %}Add new{% endtrans %}</a></li>
        <li><a href="{{ path('animalcategory_index') }}">{% trans %}List{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>Animals Categories list</h1>

<div class="table-responsive">
    <table class="table table-hover records_list">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Description{% endtrans %}</th>
                <th>{% trans %}Animal Breed{% endtrans %}</th>
                <th>{% trans %}Datcre{% endtrans %}</th>
                <th>{% trans %}Datupd{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>

            </tr>
        </thead>
        <tbody>
        {% for animalCategory in animalCategories %}
            <tr>
                <td><a href="{{ path('animalcategory_show', { 'id': animalCategory.id }) }}">{{ animalCategory.id }}</a></td>
                <td>{{ animalCategory.name }}</td>
                <td>{{ animalCategory.description }}</td>
                
                <td>
                    <a href="{% if animalCategory.animalBreed.id is defined %} {{ path('animalbreed_show', { 'id': animalBreed.id }) }} {% endif %}">{{ animalCategory.animalBreed }}</a>                          
                </td>
                <td>{% if animalCategory.datCre %}{{ animalCategory.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if animalCategory.datUpd %}{{ animalCategory.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <a class="btn btn-sm btn-info" href="{{ path('animalcategory_show', { 'id': animalCategory.id }) }}">
                        <span class="glyphicon glyphicon-share"></span> Show
                    </a>

                    <a class="btn btn-sm btn-default" href="{{ path('animalcategory_edit', { 'id': animalCategory.id }) }}">
                        <span class="glyphicon glyphicon-edit"></span>Edit
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
