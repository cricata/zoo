{% extends 'animal/animal_layout.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block submenu %}
    {{ parent() }}
    <hr />
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('fooditem_new') }}">{% trans %}Add new{% endtrans %}</a></li>
        <li><a href="{{ path('fooditem_index') }}">{% trans %}List{% endtrans %}</a></li>
        <li><a href="{{ path('fooditem_edit', { 'id':foodItem.id }) }}">{% trans %}Edit{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>FoodItem</h1>

     <div class="col-lg-4">
        <div class="table-responsive">
            <table class="table table-bordered table-hover record_properties">
                <tbody>
                    <tr>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ foodItem.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ foodItem.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ foodItem.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ foodItem.description }}</td>
            </tr>
             <tr>
                <th>Category</th>
                <td>{{ foodItem.foodCategories }}</td>
            </tr>
            <tr>
                <th>Datcre</th>
                <td>{% if foodItem.datCre %}{{ foodItem.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datupd</th>
                <td>{% if foodItem.datUpd %}{{ foodItem.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
             </tr>
                </tbody>
            </table>
        </div>

        {{ form_start(delete_form, {'attr': {'role':'form', 'class':'form-horizontal'}}) }}
        {{ form_start(delete_form) }}
        {{ form_end(delete_form) }}
    </div>

{% endblock %}
