{% extends 'base.html.twig' %}

{% block body %}
    <h1>FoodItem</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ foodItem.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ foodItem.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ foodItem.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ foodItem.description }}</td>
            </tr>
            <tr>
                <th>Datcre</th>
                <td>{% if foodItem.datCre %}{{ foodItem.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datupd</th>
                <td>{% if foodItem.datUpd %}{{ foodItem.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('fooditem_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('fooditem_edit', { 'id': foodItem.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
