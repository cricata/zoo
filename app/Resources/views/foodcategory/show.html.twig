{% extends 'base.html.twig' %}

{% block body %}
    <h1>FoodCategory</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ foodCategory.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ foodCategory.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ foodCategory.description }}</td>
            </tr>
            <tr>
                <th>Datcre</th>
                <td>{% if foodCategory.datCre %}{{ foodCategory.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datupd</th>
                <td>{% if foodCategory.datUpd %}{{ foodCategory.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('foodcategory_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('foodcategory_edit', { 'id': foodCategory.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
