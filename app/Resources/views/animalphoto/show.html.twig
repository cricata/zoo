{% extends 'animal/animal_layout.html.twig' %}
{% trans_default_domain 'AppBundle' %}

{% block submenu %}
    {{ parent() }}
    <hr />
    <ul class="nav nav-sidebar">
        <li><a href="{{ path('animalphoto_new') }}">{% trans %}Add new{% endtrans %}</a></li>
        <li><a href="{{ path('animalphoto_index') }}">{% trans %}List{% endtrans %}</a></li>
        <li><a href="{{ path('animalphoto_edit', { 'id':animalPhoto.id }) }}">{% trans %}Edit{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block body %}
    <h1>Animal Photo </h1>

    <div class="col-lg-4">
        <div class="table-responsive">
            <table class="table table-bordered table-hover record_properties">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ animalPhoto.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ animalPhoto.name }}</td>
                    </tr>
                    <tr>
                        <th>Path</th>
                        <td>{{ animalPhoto.path }}</td>
                    </tr>
                    <tr>
                        <th>Datcre</th>
                        <td>{% if animalPhoto.datCre %}{{ animalPhoto.datCre|date('Y-m-d H:i:s') }}{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Datupd</th>
                        <td>{% if animalPhoto.datUpd %}{{ animalPhoto.datUpd|date('Y-m-d H:i:s') }}{% endif %}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        {{ form_start(delete_form, {'attr': {'role':'form', 'class':'form-horizontal'}}) }}
        {{ form_start(delete_form) }}
        {{ form_end(delete_form) }}
    </div>

{% endblock %}